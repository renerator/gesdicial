@using NotificadorJudicial.Models
@model LoginViewModel
@{
    Layout = null;
    ViewBag.Title = "Iniciar sesión";
}
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" href="~/Content/Publico/assets/images/justice-128x128-128x128.png" type="image/x-icon">
    <title>Inicio de Sesión | Produce Software Ltda.</title>
    <link href="~/Scripts/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Scripts/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Scripts/vendors/nprogress/nprogress.css" rel="stylesheet">
    <link href="~/Scripts/vendors/animate.css/animate.min.css" rel="stylesheet">
    <link href="~/Content/css/custom.min.css" rel="stylesheet">
</head>
<body class="login">
    <div>
        <div class="login_wrapper">
            <div class="animate form login_form">
                <section class="login_content">
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <h4>Inicio de Sesión</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div>
                            <div>
                                @Html.TextBoxFor(m => m.Rut, new { placeholder = "Rut, ejemplo: XXXXXXXX-X", @class = "form-control" })
                                @*@Html.ValidationMessageFor(m => m.Rut, "", new { @class = "text-danger" })*@
                            </div>
                        </div>
                        <div>
                            <div>
                                @Html.PasswordFor(m => m.Password, new { placeholder = "Contraseña", @class = "form-control" })
                                @*@Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })*@
                            </div>
                        </div>
                        <div>
                            <div class="checkbox">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe)
                            </div>
                        </div>
                        @*<div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" class="btn btn-default" value="Iniciar Sesión" />
                            </div>
                        </div>*@
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <a href="@Url.Action("Ingreso","Public")">Iniciar Sesión</a>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="separator">
                            <p class="change_link">
                                ¿Eres Nuevo?
                                @Html.ActionLink("Registrate", "Register")
                                <a href="@Url.Action("Index","Public")"><i class="fa fa-home"></i> Ir al Home</a>
                            </p>
                            <div class="clearfix"></div>
                            <br />
                            <div>
                                <h2><i class="fa fa-cogs"></i> Produce Software Ltda.</h2>
                                <p>©@DateTime.Now.Year Todos los derechos reservados. Produce Software Ltda.  - Notificador Judicial</p>
                            </div>
                        </div>
                        <p>

                        </p>
                        @*Habilite esta opción después de habilitar la confirmación de la cuenta para la función de restablecimiento de contraseña
                <p>
                    @Html.ActionLink("¿Ha olvidado su contraseña?", "ForgotPassword")
                </p>*@
                    }
                </section>

            </div>
           
        </div>
    </div>
</body>
