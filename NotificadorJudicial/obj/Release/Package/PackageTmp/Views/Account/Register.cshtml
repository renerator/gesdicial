@model NotificadorJudicial.Models.RegisterViewModel
@{
    Layout = null;
    ViewBag.Title = "Registrarse";
}
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" href="~/Content/Publico/assets/images/justice-128x128-128x128.png" type="image/x-icon">
    <title>Registro de usuario | Produce Software Ltda.</title>
    <link href="~/Scripts/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Scripts/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Scripts/vendors/nprogress/nprogress.css" rel="stylesheet">
    <link href="~/Scripts/vendors/animate.css/animate.min.css" rel="stylesheet">
    <link href="~/Content/css/custom.min.css" rel="stylesheet">
</head>
<body class="login">
    <div>
        <div class="login_wrapper">
            <div class="animate form login_form">
                <section class="login_content">
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <h1>Registrate</h1>
                        <hr />
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div>
                            <div>
                                @Html.TextBoxFor(m => m.Rut, new { placeholder = "Rut, ejemplo: XXXXXXXX-X", @class = "form-control" })
                                @*@Html.ValidationMessageFor(m => m.Rut, string.Empty, new { @class = "text-danger" })*@
                                
                            </div>
                        </div>
                        <div>
                            <div>
                                @Html.TextBoxFor(m => m.Email, new { placeholder = "Correo electrónico", @class = "form-control" })
                                @*@Html.ValidationMessageFor(m => m.Email, string.Empty, new { @class = "text-danger" })*@
                            </div>
                        </div>
                        <div>
                            <div>
                                @Html.PasswordFor(m => m.Password, new { placeholder = "Contraseña", @class = "form-control" })
                                @*@Html.ValidationMessageFor(m => m.Password, string.Empty, new { @class = "text-danger" })*@
                            </div>
                        </div>
                        <div>
                            <div>
                                @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Repite contraseña", @class = "form-control" })
                                @*@Html.ValidationMessageFor(m => m.ConfirmPassword, string.Empty, new { @class = "text-danger" })*@
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" class="btn btn-default" value="Registrarse" />
                            </div>
                        </div>
                        <div class="separator">
                            <p class="change_link">
                                ¿Ya estás registrado?
                                @Html.ActionLink("Inicia Sesión", "Login")
                                <a href="@Url.Action("Index","Public")"><i class="fa fa-home"></i> Ir al Home</a>
                            </p>
                            <div class="clearfix"></div>
                            <br />
                            <div>
                                <h2><i class="fa fa-cogs"></i> Produce Software Ltda.</h2>
                                <p>©@DateTime.Now.Year Todos los derechos reservados. Produce Software Ltda.  - Notificador Judicial</p>
                            </div>
                        </div>
                    }
                </section>
            </div>
        </div>
    </div>
</body>


